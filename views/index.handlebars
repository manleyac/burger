<h1>Burgers</h1>

<div class="col-md-6">
   <h3>Burgers</h3>
   <ul>
      {{#each burgers}}
         {{#unless this.devoured}}
            <li>{{this.burger_name}}</li>
         {{/unless}}
      {{/each}}
   </ul>
</div>

<div class="col-md-6">
   <h3>Devoured</h3>
   <ul>
      {{#each burgers}}
         {{#if this.devoured}}
            <li>{{this.burger_name}}</li>
         {{/if}}
      {{/each}}
   </ul>
</div>

<h3>Add a Burger</h3>
<form id="createBurger">
   <div>
      <label>Enter Burger</label>
      <input type="text" id="inputBurger" name="burgerName">
      <button type="submit">Add Burger</button>
   </div>
</fo>